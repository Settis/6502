.export DELAY_LOOP
.proc DELAY_LOOP ; takes x & y as input
; 6 MHz = 0.16 Âµs
; Timing: 6 + 2 + (2 + (2+3)*X - 1 + 2+3)*Y - 1 + 6
;   (5*X + 6)*Y + 13
;   JSR           6
    TXA         ; 2
@LOOP_Y:
    TAX         ; 2
@LOOP_X:
    DEX         ; 2
    BNE @LOOP_X ; 3 / 2
    DEY         ; 2
    BNE @LOOP_Y ; 3 / 2
    RTS         ; 6
.endproc
